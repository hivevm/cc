{
  "name": "hivevm-cc",
  "displayName": "HiveVM CC",
  "description": "Compiler Generator for HiveVM",
  "version": "0.0.2",
  "publisher": "HiveVM",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hivevm/cc.git"
  },
  "license": "BSD-3-Clause",
  "keywords": [
    "HiveVM",
    "Parser Generator"
  ],
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "HIVEVM",
        "extensions": [ ".template" ],
        "icon": {
          "dark": "logo.png",
          "light": "logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "HIVEVM",
        "scopeName": "source.gram",
        "path": "./gram.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "eslint": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "typescript": "^5.7.2",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3"
  }
}
